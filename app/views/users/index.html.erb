<main>
  <div class="card-list-container py-5">
    <div class="row">
      <div class="col-12">
        <div class="row index_row">
        <% @users.each do |user| %>
          <div class="col-3">
            <div class="card mx-auto mt-4 shadow-lg image">
              <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 180, 100, fallback: "default-image.jpg", class:"card-img-top"; %>
              <% end %>
              <div class="card-body">
                <div class="row">
                  <div class="col-7">
                    <p class="card-title">
                      <%= link_to(user_path(user.id), class:"text-dark") do %>
                        <strong><i class="far fa-flag"></i><span> <%= user.name %></span></strong>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
