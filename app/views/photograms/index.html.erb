<main>
  <div class="container">
    <div class="row text-center">
      <div class="row index_row">
      <% @photograms.each do |photogram| %>
        <div class="col-4">
          <div class="card mx-auto mt-4 shadow-lg image">
            <%= link_to photogram_path(photogram.id) do %>
              <%= attachment_image_tag photogram, :image, :fill, 300, 300, fallback: "default-image.jpg", class:"card-img-top"; %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-5">
                  <%= attachment_image_tag photogram.user, :profile_image, :fill, 50, 50, fallback: "default-image.jpg", class:"mt-3 rounded-circle"; %>
                </div>
                <div class="col-7">
                  <p class="card-title">
                    <%= link_to(photogram_path(photogram.id), class:"text-dark") do %>
                      <strong><i class="far fa-flag"></i><span> <%= photogram.title %></span></strong>
                    <% end %>
                  </p>
                  <%= link_to(user_path(photogram.user), class:"text-dark") do %>
                    <span><i class="fas fa-user"></i> By <%= photogram.user.name %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</main>
